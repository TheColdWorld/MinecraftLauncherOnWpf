<Window x:Class="WpfMain.NewJVM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMain"
        mc:Ignorable="d"
         Title="NewJVM" Height="120" Width="400">
    <Grid>
        <TextBlock Text="选择一个java.exe存在的路径:" Height=" 20" VerticalAlignment="Top"/>
        <DockPanel Height="20" VerticalAlignment="Top" Margin="0,20">
            <TextBox x:Name="Java" Width="350"/>
            <Button Content="选择" Width="40" HorizontalAlignment="Right" Click="OpenFile"/>
        </DockPanel>
        <Button Content="确定" Height="20" Width="50" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,0,0" Click="GetResult"/>
    </Grid>
</Window>
